package myfirstproject;

import java.util.Scanner;

public class Triangle 
{
	 double base;
	  double height;
	double sideOne;
 double sideTwo;
private static Scanner s;
	
	
	public double area(double base,double height)
	{
		this.base=base;
		this.height=height;
		
		
		//System.out.println("the area of the Triangle is :" +  area);
		return (0.5*base*height);
		//return area;
	}
	public double getPerimeter(double sideOne,double sideTwo)
	{
		this.sideOne=sideOne;
		this.sideTwo=sideTwo;
		return (base+sideOne+sideTwo);
		
		//System.out.println("the perimeter of the traingle is:"+perimeter);
		//return 0;
		}
	public static void main(String args[])
	{
		Triangle t=new Triangle();
		s = new Scanner(System.in);
		System.out.println("enter the Base;");
		
		double base=s.nextFloat();
		System.out.println("enter the Height;");
		
		double height=s.nextDouble();
		System.out.println("enter the SideOne;");
		
		double sideOne=s.nextDouble();
		System.out.println("enter the SideTwo;");
		 double sideTwo=s.nextDouble();
		System.out.println("the area of the triangle is:"+ t.area(base,height));
		t.getPerimeter(sideOne,sideTwo);
		
	}
	

}
