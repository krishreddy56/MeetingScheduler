	public ArrayList<Employee> getEmployeeByDesignation(String designation)
	{
		ArrayList<Employee> tempList=new ArrayList<Employee>();
		for (Employee e:list)
		{
			if (e.getDesignation().equals(designation)){
				tempList.add(e);
			}
		}
		return tempList;
	}
}