<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/start_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Start to Sync" />
    <Button
        android:id="@+id/stop_sync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_sync"
        android:layout_alignBottom="@+id/start_sync"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:onClick="stop"
        android:text="Stop to Sync" />


    <EditText
        android:id="@+id/latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/start_sync"
        android:layout_alignRight="@+id/stop_sync"
        android:layout_centerVertical="true"
        android:inputType="text" >

       
    </EditText>

    <EditText
        android:id="@+id/longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/latitude"
        android:layout_alignRight="@id/latitude"
        android:layout_below="@+id/latitude"
        android:layout_marginTop="16dp"
        android:inputType="text" />

</RelativeLayout>